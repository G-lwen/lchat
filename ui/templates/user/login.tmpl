{{ define "login.tmpl" }}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <meta name="generator" content="">
    <title>lchat</title>
    <link rel="icon" href="/favicon.ico">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <style>
      body {
        height: 100%;
        background-color: #f9f9f9;
      }
      .l-login {
        width: 390px;
        height:310px;
        border-radius: 10px;
        background-color: white;
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
      }
      .l-login-title {
        padding-top: 15px;
        text-align: center;
        font-size: 39px;
        text-shadow: 3px 3px 3px black;
      }
      .l-login-form {
        position: absolute;
        left: 25px;
        width: 340px;
        bottom: 20px;
      }
    </style>
  </head>
  <body>
    <div class="l-login shadow">
      <div class="l-login-title"><a href="/">Lchat</a> 登录平台</div>
      <!-- 登录表单 -->
      <form class="l-login-form">
        <div class="form-group">
          <input type="email" class="form-control" name="username" id="inputUsername" placeholder="请输入邮箱帐号" required>
        </div>
        <div class="form-group">
          <input type="password" class="form-control" name="password" id="inputPassword" placeholder="请输入密码" required>
        </div>
        <div class="form-group form-check">
          <input type="checkbox" class="form-check-input" id="exampleCheck1">
          <label class="form-check-label" for="exampleCheck1">保存密码</label>
        </div>
        <button type="submit" class="btn btn-primary btn-block">登录</button>
      </form>
    </div>

    <script src="/js/jquery-3.5.1.min.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script>
      $(function() {
        $('form').submit(function (event) {
          event.preventDefault();
          event.stopPropagation();
          $.ajax({
            url: "/login",
            type: "POST",
            data: $('form').serialize(),
            success:function(res){
              if (res.code == 200) {
                window.location.href='/';
                return
              }
              alert("登录失败, 帐号或密码错误");
            },
            error:function(err){  //请求失败的回调方法
              alert("系统繁忙, 请稍后重试! ");
            }
          });
        });
      })
    </script>
  </body>
</html>

{{ end }}